{
  "name": "leveldb-search",
  "version": "1.0.0",
  "description": "LevelDB search implementation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --max-old-space-size=8192 --optimize-for-size --gc-interval=100 --expose-gc dist/index.js",
    "start:safe": "while true; do npm start || echo 'Process crashed, restarting in 5 seconds...'; sleep 5; done",
    "dev": "ts-node --max-old-space-size=8192 --expose-gc src/index.ts",
    "health-check": "curl -f http://localhost:3000/health || exit 1"
  },
  "dependencies": {
    "level": "^8.0.0",
    "search-framework": "workspace:*",
    "shared-utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1"
  }
} 